<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainListFragment">

    <fragment
        android:id="@+id/mainListFragment"
        android:name="com.example.learnsource.MainListFragment"
        android:label="fragment_main_list2"
        tools:layout="@layout/fragment_main_list2" >
        <action
            android:id="@+id/action_mainListFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <action
            android:id="@+id/action_mainListFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_mainListFragment_self"
            app:destination="@id/mainListFragment" />
        <argument
            android:name="item"
            app:argType="com.example.learnsource.ItemMainList"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.learnsource.AddItemFragment"
        android:label="AddItemFragment" >
        <action
            android:id="@+id/action_addItemFragment_to_mainListFragment"
            app:destination="@id/mainListFragment" />
        <argument
            android:name="item"
            app:argType="com.example.learnsource.ItemMainList" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.learnsource.UpdateFragment"
        android:label="UpdateFragment" >
        <argument
            android:name="itemForUpdate"
            app:argType="com.example.learnsource.ItemMainList" />
        <action
            android:id="@+id/action_updateFragment_to_mainListFragment"
            app:destination="@id/mainListFragment" />
    </fragment>
</navigation>